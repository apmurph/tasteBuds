<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead"><%=blogger.username%>'s Reviews</p>
            <div class="list-group">
                <% blogger.restaurants.forEach(function(restaurant){ %>
                    <li class="list-group-item active">
                        <a href="/restaurants/<%=restaurant._id%>"><%=restaurant.name%></a>
                    </li>
                <% }) %>
            </div>
            <a class="btn btn-default" href="/bloggers">Go Back</a> 
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= blogger.image %>">
                <div class="caption-full">
                    <h4><a><%=blogger.username%></a></h4>
                    <p><%= blogger.description %></p> 
                </div>
                <% if(currentUser && blogger._id.equals(currentUser._id)){ %>
                    <a class="btn btn-xs btn-warning" href="/bloggers/<%=blogger._id%>/edit">Edit</a>
                    <form class="deleteForm" action="/bloggers/<%=blogger._id%>?_method=DELETE" method="POST">
                        <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                    </form>
                <% } %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>