<% include ../partials/header %>

<div class="container">
    <div class"row">
        <h1 style="text-align:center;">Manage Profile</h1>
        <div style="width: 40%; margin: 30px auto;">
            <form action="/bloggers/<%= blogger._id%>?_method=PUT" method="POST">
                 <div class="form-group">
                    <input class="form-control" type="text" name="blogger[image]" placeholder="URL of Blogger Image" value="<%=blogger.image%>">   
                </div> 
                <div class="form-group">
                    <input class="form-control" type="text" name="blogger[description]" placeholder="Describe yourself..." value="<%=blogger.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>    
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
</div>
    
<% include ../partials/footer %>