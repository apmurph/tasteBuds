<% include ../partials/header %>
<div class="container">
    <div class"row">
        <h1 style="text-align:center;">Creat a New Restaurant</h1>
        <div style="width: 40%; margin: 30px auto;">
            <form action="/restaurants" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name of Restaurant">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="address" placeholder="Address">    
                </div>   
                <div class="form-group">
                    <input class="form-control" type="text" name="postcode" placeholder="Postcode">    
                </div> 
                <div class="form-group">
                    <input class="form-control" type="number" name="contact" placeholder="Contact Number">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="website" placeholder="Website">    
                </div>  
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="Email Address">    
                </div>                
                 <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="URL of Restaurant Image">                    
                </div> 
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Review">                    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="quote" placeholder="Headline Quote.." maxlength="100">                    
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="taste" placeholder="Rate Taste" min="0" max="5" step="1">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Rate Price" min="0" max="5" step="1">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="service" placeholder="Rate Service" min="0" max="5" step="1">    
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>    
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
