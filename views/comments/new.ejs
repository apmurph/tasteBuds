<% include ../partials/header %>
<div class="container">
    <div class"row">
        <h1 style="text-align:center;">Add New Comments to  <%= restaurant.name %></h1>
        <div style="width: 40%; margin: 30px auto;">
            <form action="/restaurants/<%= restaurant._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea name="comment[text]" placeholder="Comment.." maxlength="500" cols="30" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <label>Rate the Taste</label>
                    <input class="form-control" type="number" name="comment[taste]" placeholder="Rate Taste" min="0" max="5" step="1">    
                </div>
                <div class="form-group">
                    <label>Rate the Price</label>
                    <input class="form-control" type="number" name="comment[price]" placeholder="Rate Price" min="0" max="5" step="1">    
                </div>
                <div class="form-group">
                    <label>Rate the Service</label>
                    <input class="form-control" type="number" name="comment[service]" placeholder="Rate Service" min="0" max="5" step="1">    
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>    
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>